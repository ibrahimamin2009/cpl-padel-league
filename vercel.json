{
  "version": 2,
  "builds": [
    {
      "src": "app_vercel.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app_vercel.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "VERCEL_ENVIRONMENT": "production"
  },
  "functions": {
    "app_vercel.py": {
      "maxDuration": 30
    }
  }
} 